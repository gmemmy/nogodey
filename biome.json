{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "node_modules/**",
      "dist/**",
      "build/**",
      "coverage/**",
      "bundle.js*",
      "*.d.ts",
      "tests/fixtures/**",
      "expo-plugin-nogodey/build/**",
      "expo-plugin-nogodey/dist/**",
      "examples/*/node_modules/**",
      "examples/*/.expo/**",
      "examples/*/dist/**",
      "examples/*/build/**",
      "bin/**",
      "*.go",
      "go.mod",
      "go.sum",
      "Makefile"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf",
    "bracketSpacing": false
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true,
        "noExcessiveCognitiveComplexity": "error",
        "noVoid": "off"
      },
      "correctness": {
        "recommended": true,
        "noUndeclaredVariables": "error",
        "noUnusedVariables": "error"
      },
      "performance": {
        "recommended": true
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "useConst": "error",
        "useTemplate": "error",
        "noVar": "error",
        "noNonNullAssertion": "off"
      },
      "suspicious": {
        "recommended": true,
        "noExplicitAny": "error",
        "noArrayIndexKey": "off"
      }
    }
  },
  "javascript": {
    "globals": [
      "describe",
      "test",
      "it",
      "expect",
      "beforeEach",
      "afterEach",
      "beforeAll",
      "afterAll",
      "vi"
    ],
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "quoteProperties": "asNeeded",
      "bracketSpacing": false
    }
  },
  "json": {
    "formatter": {
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
